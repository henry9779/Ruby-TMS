<h1><%= t('task_management_system') %></h1>

<%= notice %>
<%= link_to t('task.new'), new_task_path %>
<%= link_to '中文', :locale => 'zh-TW' %>
<%= link_to 'English', :locale => 'en' %>

<table>
  <tr>
    <td><%= t('task.title') %></td>
    <td><%= t('task.content') %></td>
    <td></td>
  </tr>
</table>

<table>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to t('task.edit'), edit_task_path(task) %></td>
      <td>
        <%= link_to t('task.delete'),
                    task_path(task),
                    method: 'delete',
                    data: {confirm: t('notice.confirm')}
        %>
      </td>
    </tr>
  <% end %>
</table>
