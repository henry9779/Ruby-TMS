<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for task, html: { class: 'row g-3 m-3' } do |f| %>

  <div class='col-12 mb-3'>
    <%= f.label :title, t('task.title'), class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= f.label :content, t('task.content'), class: 'form-label' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class='col-3'>
    <%= f.label :priority, t('task.priority'), class: 'form-label' %>
    <%= f.select :priority, [ [t('low'), 'low'],
                              [t('middle'), 'middle'],
                              [t('high'), 'high'] ],
                              class: 'form-select' %>
  </div>

  <div class='col-3'>
    <%= f.label :status, t('task.status'), class: 'form-label' %>
    <%= f.select :status, [ [t('pending'), 'pending'],
                            [t('in_progress'), 'in_progress'],
                            [t('completed'), 'completed'] ],
                            class: 'form-select' %>
  </div>

  <div class='col-6'>
    <%= f.label :end_at, t('task.end_at'), class: 'form-label' %>
    <%= f.datetime_field :end_at, class: 'form-control' %>
  </div>

  <div class='col-12 mt-3 mb-3'>
    <%= f.submit t('button.submit'), class: 'btn btn-primary' %>
    <%= link_to t('link.back_root'), root_path, class: 'btn btn-secondary' %>
  </div>

<% end %>
